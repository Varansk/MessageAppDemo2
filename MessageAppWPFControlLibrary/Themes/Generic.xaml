    <Style x:Key="FocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle
                        Margin="2"
                        SnapsToDevicePixels="true"
                        Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                        StrokeDashArray="1 2"
                        StrokeThickness="1" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type MyNamespace:ButtonExtended}">
        <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}" />
        <Setter Property="Background" Value="{StaticResource Button.Static.Background}" />
        <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MyNamespace:ButtonExtended}">
                    <Border
                        x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ButtonCornerRadius}"
                        Opacity="{TemplateBinding Opacity}"
                        SnapsToDevicePixels="true">
                        <ContentPresenter
                            x:Name="contentPresenter"
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Focusable="False"
                            RecognizesAccessKey="True"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsDefaulted" Value="true">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="border" Property="Background" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=OnMouseEnterBorderBrush}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.MouseOver.Border}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="border" Property="Background" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=OnMouseClickBorderBrush}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.Pressed.Border}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource Button.Disabled.Background}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Button.Disabled.Border}" />
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="{StaticResource Button.Disabled.Foreground}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="{x:Type MyNamespace:ChatCard}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MyNamespace:ChatCard}">
                    <Border
                        x:Name="mainborder"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">

                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="0.4*" />
                                <ColumnDefinition Width="0.4*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>


                            <Ellipse
                                x:Name="ProfilePicture"
                                Grid.Row="0"
                                Grid.RowSpan="6"
                                Grid.Column="0"
                                Stretch="UniformToFill"
                                Stroke="#6F6D6D"
                                StrokeThickness="0.1">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=MainImage}" />
                                </Ellipse.Fill>
                            </Ellipse>

                            <Viewbox
                                Grid.Row="1"
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                Grid.ColumnSpan="3"
                                HorizontalAlignment="Left">
                                <TextBlock
                                    x:Name="ChatName"
                                    FontWeight="Bold"
                                    Text="{TemplateBinding ChatName}"
                                    TextWrapping="Wrap" />
                            </Viewbox>


                            <Viewbox Grid.Row="4" Grid.Column="2">
                                <TextBlock
                                    x:Name="LastMessageSenderName"
                                    Grid.Row="4"
                                    Grid.Column="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontWeight="DemiBold"
                                    Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=LastMessageSenderName, StringFormat={}{0} :}" />
                            </Viewbox>


                            <Viewbox
                                Grid.Row="4"
                                Grid.Column="3"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Stretch="Uniform">
                                <Image
                                    Grid.Row="4"
                                    Grid.Column="3"
                                    Margin="1"
                                    Source="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=LastMessageLogo}"
                                    Stretch="UniformToFill" />
                            </Viewbox>



                            <Viewbox
                                Grid.Row="4 "
                                Grid.Column="4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Grid.Row="4 "
                                    Grid.Column="4"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=LastMessage}" />
                            </Viewbox>

                            <Viewbox
                                x:Name="UnreadedMessages"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="5"
                                Grid.ColumnSpan="2">

                                <Grid Width="20" Height="20">

                                    <Ellipse Fill="#B3B3B3" />

                                    <TextBlock
                                        x:Name="MessageCount"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Foreground="Black"
                                        Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=NonReadMessageCount}"
                                        TextAlignment="Center" />
                                </Grid>
                            </Viewbox>

                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding ElementName=MessageCount, Path=Text}" Value="0">
                            <Setter TargetName="UnreadedMessages" Property="Visibility" Value="Hidden" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>

            </Setter.Value>
        </Setter>

    </Style>









    <Style TargetType="MyNamespace:TextMessageCard">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MyNamespace:TextMessageCard" >

                    <Grid
                        x:Name="maingrid"
                        Margin="5"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="{TemplateBinding Width}" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>


                        <Expander
                            x:Name="expander"
                            Grid.Column="3"
                            
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            ExpandDirection="Down"
                            IsExpanded="False"
                            Style="{StaticResource ExpanderStyle1}">
                            <Border Background="Transparent">
                                <StackPanel>

                                    <Button
                                        x:Name="edit"
                                        Margin="0,0,0,2"
                                        Command="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ExpanderButtonCommandsTtoD[0]}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ExpanderButtonCommandParametersTtoD[0]}">
                                        <Button.Template>
                                            <ControlTemplate>
                                                <Grid>
                                                    <Ellipse
                                                        x:Name="circle"
                                                        Width="12"
                                                        Height="12"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Fill="#FFFFFFFF"
                                                        Stroke="#FF333333" />
                                                    <Image
                                                        x:Name="arrow"
                                                        Width="8"
                                                        Height="8"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        SnapsToDevicePixels="false"
                                                        Source="pack://application:,,,/MessageAppWPFCustomControlLibrary;component\Images\edit.png"
                                                        Stretch="Uniform" />
                                                </Grid>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>


                                    <Button
                                        x:Name="delete"
                                        Command="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ExpanderButtonCommandsTtoD[1]}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ExpanderButtonCommandParametersTtoD[1]}">
                                        <Button.Template>
                                            <ControlTemplate>
                                                <Grid>
                                                    <Ellipse
                                                        x:Name="circle"
                                                        Width="12"
                                                        Height="12"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Fill="#FFFFFFFF"
                                                        Stroke="#FF333333" />
                                                    <Image
                                                        x:Name="arrow"
                                                        Width="8"
                                                        Height="8"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        SnapsToDevicePixels="false"
                                                        Source="pack://application:,,,/MessageAppWPFCustomControlLibrary;component\Images\delete.png"
                                                        Stretch="Uniform" />
                                                </Grid>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>



                                </StackPanel>
                            </Border>
                        </Expander>


                        <Image
                            x:Name="profilepicture"
                            Grid.Row="0"
                            Grid.Column="0"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Source="{TemplateBinding ProfileImage}"
                            Stretch="Fill">
                            <Image.OpacityMask>
                                <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                    <GradientStop Offset="1" Color="#ffffffff" />
                                    <GradientStop Offset="1" Color="#00ffffff" />
                                </RadialGradientBrush>
                            </Image.OpacityMask>
                        </Image>


                        <Border
                            x:Name="mainborder"
                            Grid.Row="0"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Background="Silver"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">


                            <TextBlock
                                x:Name="text"
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="5"
                                TextWrapping="Wrap">
                                <Run
                                    FontSize="8"
                                    FontWeight="Bold"
                                    Text="{TemplateBinding SenderName}" />
                                <Run
                                    FontSize="8"
                                    FontWeight="Bold"
                                    Text=":" />
                                <LineBreak />
                                <Run Text="{TemplateBinding Text}" />
                                <LineBreak />

                                <Run
                                    FontSize="6"
                                    FontWeight="DemiBold"
                                    Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=MessageSendDate}" />

                            </TextBlock>

                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="expander" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="expander" Property="Visibility" Value="Hidden" />
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>



</ResourceDictionary>
